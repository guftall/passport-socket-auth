<!DOCTYPE html>
<html>
  <head>
    <title>Passport-Google (OAuth 2.0) Example</title>
  </head>
  <body>
    <% if (!user) { %>
      <p>
      <a href="/">Home</a> |
      <a href="/login">Log In</a>
      </p>
    <% } else { %>
      <p>
      <a href="/">Home</a> |
      <a href="/account">Account</a> |
      <a href="/logout">Log Out</a>
      </p>
    <% } %>
    <%- body %>

    <% if (user) { %>
      <script src="/socket.io/socket.io.js"></script>
      <script>
        var socket = io.connect('http://passport-socket-auth.herokuapp.com');
        socket.on('connected', function (data) {
          alert('Connected as ' + data.username);
        });
      </script>
    <% } %>
  </body>
</html>
